-- Bloodlust Hub for Grow A Garden (by Blood.lust)
local P = game.Players.LocalPlayer
local G = Instance.new("ScreenGui", P:WaitForChild("PlayerGui"))
G.Name = "BloodlustHub"

local F = Instance.new("Frame", G)
F.Size = UDim2.new(0, 280, 0, 230)
F.Position = UDim2.new(0.03,0,0.25,0)
F.BackgroundColor3 = Color3.fromRGB(35,0,0)
F.BorderSizePixel = 0

local function mk(txt, y, cb)
  local b = Instance.new("TextButton", F)
  b.Size = UDim2.new(0.9,0,0,30)
  b.Position = UDim2.new(0.05,0,y,0)
  b.BackgroundColor3 = Color3.fromRGB(90,0,0)
  b.TextColor3 = Color3.new(1,1,1)
  b.Font = Enum.Font.GothamBold
  b.TextSize = 16
  b.Text = txt
  b.MouseButton1Click:Connect(cb)
  return b
end

local function lbl(txt,y,siz)
  local l = Instance.new("TextLabel", F)
  l.Size = UDim2.new(1,0,0,siz or 20)
  l.Position = UDim2.new(0,0,y,0)
  l.BackgroundTransparency = 1
  l.Text = txt
  l.TextColor3 = Color3.fromRGB(200,0,0)
  l.Font = Enum.Font.Gotham
  l.TextSize = siz and 18 or 20
end

-- Title & Credit
lbl("ü©∏ Bloodlust Hub", 0, 25)
mk("üí• No Lag", 0.1, function()
  for _,v in pairs(workspace:GetDescendants()) do
    if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Smoke") or v:IsA("Fire") then
      pcall(function() v:Destroy() end)
    end
  end
  settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
end)

local farm,harv,sell = false,false,false
local mf = mk("‚û°Ô∏è Auto Farm: OFF", 0.2, function()
  farm = not farm
  mf.Text = "‚û°Ô∏è Auto Farm: " .. (farm and "ON" or "OFF")
end)
local mh = mk("üåæ Auto Harvest: OFF", 0.3, function()
  harv = not harv
  mh.Text = "üåæ Auto Harvest: " .. (harv and "ON" or "OFF")
end)
local ms = mk("üí∞ Auto Sell: OFF", 0.4, function()
  sell = not sell
  ms.Text = "üí∞ Auto Sell: " .. (sell and "ON" or "OFF")
end)

mk("üõí TP to Gear Shop", 0.5, function()
  local shop = workspace:FindFirstChild("GearShop")
  if shop and P.Character and P.Character:FindFirstChild("HumanoidRootPart") then
    P.Character.HumanoidRootPart.CFrame = shop.CFrame + Vector3.new(0,5,0)
  end
end)

local spd=1
mk("‚ö° Speed x1", 0.6, function()
  spd = spd%5 + 1
  P.Character.Humanoid.WalkSpeed = 16 * spd
  mf.Text = "‚ö° Speed x" .. spd
end)

local jmp=1
mk("üî∫ Jump x1", 0.7, function()
  jmp = jmp%5 + 1
  P.Character.Humanoid.JumpPower = 50 * jmp
  mf.Text = "üî∫ Jump x" .. jmp
end)

lbl("üó£Ô∏è Speech Hub (Soon)", 0.üòé
lbl("Created by Blood.lust", 0.9, 18)

spawn(function()
  while wait(1) do
    if farm then
      pcall(function()
        for _, v in pairs(workspace.Plants:GetChildren()) do
          v.CFrame = P.Character.HumanoidRootPart.CFrame
        end
      end)
    end
    if harv then
      pcall(function()
        for _, v in pairs(workspace:GetDescendants()) do
          if v:IsA("ClickDetector") and v.Name=="Harvest" then fireclickdetector(v) end
        end
      end)
    end
    if sell then
      pcall(function()
        local z = workspace:FindFirstChild("SellZone")
        if z then P.Character.HumanoidRootPart.CFrame = z.CFrame end
      end)
    end
  end
end)
